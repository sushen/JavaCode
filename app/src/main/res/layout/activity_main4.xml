<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="casual"
        android:text="Learn Java With Biswas"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="1dp" />


    <Button
        android:id="@+id/goArrays"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="configureArrays"
        android:text="Arrays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/goRandomResultArrays"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="configureRandomResultArrays"
        android:text="Random Result Arrays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goArrays" />

    <Button
        android:id="@+id/goArraysAndLoop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="configureArraysAndLoop"
        android:text="Arrays And Loop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goRandomResultArrays" />

    <Button
        android:id="@+id/goArrayBound"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="configureArrayBound"
        android:text="Array Bound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goArraysAndLoop" />

    <Button
        android:id="@+id/goToActivety5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="configuregoToActivety5"
        android:text="Next"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/goArrayBound"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/goToMainBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="goToMain"
        android:textSize="20sp"
        android:text="Go to main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToActivety5"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>